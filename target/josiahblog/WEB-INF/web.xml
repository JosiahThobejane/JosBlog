<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>SubmitArticle</servlet-name>
        <servlet-class>josblog.controllers.SubmitArticle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteArticle</servlet-name>
        <servlet-class>josblog.controllers.DeleteArticle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>article</servlet-name>
        <servlet-class>josblog.controllers.article</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitArticle</servlet-name>
        <url-pattern>/SubmitArticle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteArticle</servlet-name>
        <url-pattern>/DeleteArticle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>article</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
